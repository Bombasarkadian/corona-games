{
  "emulators": {
    "auth": {
      "port": 11190
    },
    "firestore": {
      "port": 11180
    },
    "ui": {
      "enabled": true,
      "port": 11140
    },
    "hosting": {
      "port": 11150
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
