{
  "name": "octoboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@artsy/fresnel": "^1.3.1",
    "@sentry/node": "^6.2.4",
    "@sentry/react": "^6.2.4",
    "@sentry/tracing": "^6.2.4",
    "bgio-firebase": "^0.3.1",
    "bgio-storage-cache": "^0.3.0",
    "boardgame.io": "^0.43.3",
    "clsx": "^1.1.1",
    "concurrently": "^6.0.0",
    "esm": "^3.2.25",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.6.0",
    "i18next": "^20.1.0",
    "i18next-browser-languagedetector": "^6.1.0",
    "i18next-xhr-backend": "^3.2.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "node-sass": "^5.0.0",
    "pretty-quick": "^3.1.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^16.14.0",
    "react-dom-confetti": "^0.2.0",
    "react-helmet-async": "^1.0.9",
    "react-i18next": "^11.8.12",
    "react-query": "^3.13.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-toastify": "^7.0.3",
    "remove-accents": "^0.4.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3"
  },
  "scripts": {
    "start": "NODE_ENV=development concurrently -p \"{time} [{name}]\" -t \"HH:mm:ss.SSS\" -n \"client,server,firebase,storybook,test\" -c \"green.bold,blue.bold,yellow.bold,magenta.bold,red.bold\" \"npm:start:client\" \"npm:start:server\" \"npm:start:firebase\" \"npm:start:storybook\" \"npm:test\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "lint": "eslint '**/*.{js,jsx,json}'",
    "prettier": "prettier --write .",
    "prettier-check": "pretty-quick --staged",
    "prettier-ci": "pretty-quick --check",
    "storybook-ci": "start-storybook --ci --smoke-test --quiet",
    "test-ci": "react-scripts test --coverage --ci --coverageReporters=lcov",
    "build-storybook": "build-storybook -s public",
    "start:server": "NODE_ENV=development nodemon -r esm src/server.js",
    "start:client": "react-scripts start",
    "start:firebase": "firebase emulators:start --import=./emulators.backup",
    "start:storybook": "start-storybook -p 9009 -s public --quiet",
    "prepare": "if test \"$NODE_ENV\" != production ; then husky install ; fi"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.stories.js"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".stories.js",
      "GameContextMock.js"
    ]
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.13.1",
    "@storybook/addon-actions": "^6.2.1",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addon-knobs": "^6.2.1",
    "@storybook/addon-links": "^6.2.1",
    "@storybook/addon-storysource": "^6.2.1",
    "@storybook/addon-viewport": "^6.2.1",
    "@storybook/addons": "^6.2.1",
    "@storybook/cli": "^6.2.1",
    "@storybook/node-logger": "^6.2.1",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "firebase-tools": "^9.8.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "storybook": "^6.2.1",
    "storybook-react-router": "^1.0.8"
  }
}
